generator client {
  provider = "prisma-client-js"
  seed     = "ts-node prisma/seed.ts"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Candidatos {
  id                  Int        @id @default(autoincrement())
  nome                String
  cnpj_cpf            String     @unique
  telefone            String
  sexo                String
  especializacao      String?
  experiencia         String?
  experienciaHomeCare String?
  cargo               String
  valor               Float?
  idade               Int?
  cep                 String
  cidade              String
  estado              String
  email               String
  createdAt           DateTime   @default(now())
  documentosValidados Boolean?   @default(false)
  ativo               Boolean?   @default(true)
  arquivos            Arquivos[] // Relacionamento com Arquivos
  atuacoes            Atuacao[] // Relacionamento com Atuacao

  @@index([email])
  @@index([cnpj_cpf])
}

model Arquivos {
  id             Int           @id @default(autoincrement())
  candidatoId    Int
  tipoArquivo    TiposArquivos
  nomeArquivo    String
  caminhoArquivo String
  createdAt      DateTime      @default(now())
  candidato      Candidatos    @relation(fields: [candidatoId], references: [id])

  @@index([candidatoId], map: "Arquivo_candidatoId_fkey")
}

model Estados {
  id        Int       @id @default(autoincrement())
  nome      String    @db.VarChar(30)
  sigla     String    @db.VarChar(2)
  pais      String    @db.VarChar(20)
  createdAt DateTime? @map("created_at")
  updatedAt DateTime? @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  cidades Cidades[] // Relacionamento com Cidades

  @@map("estados")
}

model Cidades {
  id         Int       @id @default(autoincrement())
  idEstado   Int
  nome       String    @db.VarChar(50)
  codigoIbge String    @db.VarChar(10)
  createdAt  DateTime? @map("created_at")
  updatedAt  DateTime? @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  estado  Estados   @relation(fields: [idEstado], references: [id])
  Atuacao Atuacao[] // Relacionamento com Atuacao

  @@map("cidades")
}

model Atuacao {
  id           Int         @id @default(autoincrement())
  cidadeId     Int
  cidade       Cidades     @relation(fields: [cidadeId], references: [id])
  Candidatos   Candidatos? @relation(fields: [candidatosId], references: [id])
  candidatosId Int?

  @@map("atuacao")
}

enum TiposArquivos {
  CURRICULO // Currículo (Pessoa Física)
  CARTEIRA_CONSELHO // Carteira do Conselho de Classe (Pessoa Física)
  ALVARA_SANITARIO // Alvará Sanitário (Pessoa Física)
  ALVARA_FUNCIONAMENTO // Alvará de Funcionamento (Pessoa Física)
  CERTIDAO_NEGATIVA // Certidão Negativa (Pessoa Física)
  RELACAO_PROFISSIONAIS // Relação de Profissionais (Pessoa Jurídica)
  CNAES // CNAEs (Pessoa Jurídica)
  REGISTRO_CONSELHO_CLASSE // Registro no Conselho de Classe (Pessoa Jurídica)
  ALVARA_FUNCIONAMENTO_PJ // Alvará de Funcionamento (Pessoa Jurídica)
  ALVARA_SANITARIO_PJ // Alvará Sanitário (Pessoa Jurídica)
  CERTIDAO_NEGATIVA_PJ // Certidão Negativa (Pessoa Jurídica)
}

model Cargos {
  id          Int    @id @default(autoincrement())
  nome        String @unique
  valor_medio Float
}
